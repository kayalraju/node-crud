<!DOCTYPE html>
<html lang="en">
<head>
    <title><%=title%></title>
    <%- include('./layout/head')%>
</head>
<body>

<div class="container">
  <h2>Product Details</h2>
  <p><a href="/add-product" class="btn btn-info">Add-Product</a></p> 
  <% if (message.length>0) {%> 
    <div class="alert alert-success">
      <%= message %>
    </div>  
    <%}%>        
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Size</th>
        <th>Details</th>
        <th>Product Image</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <% if(displaydata.length>0) {%>
    <tbody>
      <% for(let product of displaydata){ %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.price %></td>
        <td><%= product.size %></td>
        <td><%= product.details %></td>
        <td><img src="<%=product.image%>" alt="product image" width="50px" height="50px"></td>
        <td><a href="/edit-product/<%= product._id%>" class="btn btn-success">Edit</a></td>
        <td><a href="/delete-product/<%= product._id%>" class="btn btn-danger">Delete</a></td>
      </tr>
      
    </tbody>
    <%}}else{%>
    <h1>no data found</h1>
    <% } %>
  </table>
</div>

</body>
</html>
